{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",               // Use ESNext para compatibilidade com módulos ES
    "esModuleInterop": true,          // Habilita a interoperabilidade entre CommonJS e ES Modules
    "moduleResolution": "node",       // Resolves modules como o Node.js
    "strict": true,                   // Habilita checagens estritas
    "skipLibCheck": true,             // Ignora checagem de bibliotecas
    "outDir": "./dist",               // Onde os arquivos compilados serão armazenados
    "rootDir": "./src",               // Define a pasta de origem para os arquivos .ts
    "resolveJsonModule": true,        // Permite importar arquivos JSON
    "forceConsistentCasingInFileNames": true  // Garante consistência nos nomes de arquivos
  },
  "include": ["src/**/*.ts"],           // Inclui todos os arquivos .ts dentro de src
  "exclude": ["node_modules"]           // Exclui node_modules da compilação
}
